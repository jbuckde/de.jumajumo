<mvc:View 
    controllerName="de.jumajumo.homecontrol.ui.controller.App"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns="sap.m" 
    xmlns:uxap="sap.uxap">
    
    <uxap:ObjectPageLayout enableLazyLoading="true">
        <uxap:headerTitle>
            <uxap:ObjectPageHeader
                objectTitle="{i18n>garage.objectheader.title}">
                <uxap:actions>
                    <uxap:ObjectPageHeaderActionButton icon="sap-icon://system-exit" text="{i18n>garage.button.switchDoor}" press="switchDoor" type="Emphasized" hideText="false"/>
                </uxap:actions>
            </uxap:ObjectPageHeader>
        </uxap:headerTitle>
        <uxap:sections>
            <uxap:ObjectPageSection title="{i18n>garage.tab.camera}">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection>
                        <uxap:blocks>
                            <html:img width="90%" src="http://192.168.1.83/camera/garage?action=stream" style="transform:rotate(180deg);max-width:450px" />
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
            <uxap:ObjectPageSection title="{i18n>garage.tab.thermometer}">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection title="{i18n>garage.tab.humidity}">
                        <uxap:blocks>
                            <html:iframe width="90%" height="260" style="border: 1px solid #cccccc;max-width:450px" src="https://thingspeak.com/channels/374377/charts/1?api_key=7UG54A908GKFEKNF&#x26;bgcolor=%23ffffff&#x26;color=%23d62020&#x26;dynamic=true&#x26;days=5&#x26;title=Garage+Humidity&#x26;type=line"/>
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                    <uxap:ObjectPageSubSection title="{i18n>garage.tab.humidity.recent}">
                        <uxap:blocks>
                            <html:iframe width="90%" height="260" style="border: 1px solid #cccccc;max-width:450px" src="https://thingspeak.com/channels/374377/charts/1?api_key=7UG54A908GKFEKNF&#x26;bgcolor=%23ffffff&#x26;color=%23d62020&#x26;dynamic=true&#x26;days=1&#x26;title=Garage+Humidity&#x26;type=line"/>
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                    <uxap:ObjectPageSubSection title="{i18n>garage.tab.temperature}">
                        <uxap:blocks>
                            <html:iframe width="90%" height="260" style="border: 1px solid #cccccc;max-width:450px" src="https://thingspeak.com/channels/374377/charts/2?api_key=7UG54A908GKFEKNF&#x26;bgcolor=%23ffffff&#x26;color=%23d62020&#x26;dynamic=true&#x26;days=5&#x26;title=Garage+Temperature&#x26;type=line"/>
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                    <uxap:ObjectPageSubSection title="{i18n>garage.tab.temperature.recent}">
                        <uxap:blocks>
                            <html:iframe width="90%" height="260" style="border: 1px solid #cccccc;max-width:450px" src="https://thingspeak.com/channels/374377/charts/2?api_key=7UG54A908GKFEKNF&#x26;bgcolor=%23ffffff&#x26;color=%23d62020&#x26;dynamic=true&#x26;days=1&#x26;title=Garage+Temperature&#x26;type=line"/>
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
        </uxap:sections>
    </uxap:ObjectPageLayout>


</mvc:View>
