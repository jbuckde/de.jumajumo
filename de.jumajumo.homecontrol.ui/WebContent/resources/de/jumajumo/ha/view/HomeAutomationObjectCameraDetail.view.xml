<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns:html="http://www.w3.org/1999/xhtml" controllerName="de.jumajumo.ha.view.HomeAutomationObjectCameraDetail"
	xmlns="sap.m" resourceBundleUrl="resources/de/jumajumo/ha/view/camera.properties"
	resourceBundleAlias="ui">

	<Page showNavButton="{device>/isPhone}" title="{ui>page.title}"
		navButtonPress="goBack">

		<IconTabBar class="iconTabBarPaddingTop" expanded="{device>/isNoPhone}">
			<items>
				<IconTabFilter text="{ui>tab.door}" icon="sap-icon://video">
					<html:img class="imgborder"
						src="http://192.168.1.83/camera/door?user=watcher&amp;pwd=watcher"
						alt="" width="99%" border="0" />
				</IconTabFilter>
				<IconTabFilter text="{ui>tab.garage}" icon="sap-icon://video">
					<html:img src="http://192.168.1.83/camera/garage?action=stream"
						width="99%" border="0" />
				</IconTabFilter>
				<IconTabFilter text="{ui>tab.pictures}" icon="sap-icon://picture">
					<Table id="cameraImagesOverview" inset="false"
						items="{pictures>/}">
						<columns>
							<Column>
								<Text text="shot at" />
							</Column>
						</columns>
						<items>
							<ColumnListItem press="selectActionChain" type="Navigation">
								<cells>
									<ObjectIdentifier title="{path:'pictures>shotAt', formatter:'formatter.DateFormatter.longDateFromMills'}" class="sapMTableContentMargin" />
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</IconTabFilter>
			</items>
		</IconTabBar>
	</Page>

</mvc:View>