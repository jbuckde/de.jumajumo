<mvc:View 
    controllerName="de.jumajumo.homecontrol.ui.controller.App"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns="sap.m" 
    xmlns:uxap="sap.uxap">
    
    <uxap:ObjectPageLayout enableLazyLoading="true">
        <uxap:headerTitle>
            <uxap:ObjectPageHeader
                objectTitle="{i18n>cameras.objectheader.title}">
            </uxap:ObjectPageHeader>
        </uxap:headerTitle>
        <uxap:sections>
            <uxap:ObjectPageSection title="{i18n>cameras.tab.door}">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection>
                        <uxap:blocks>
                            <html:img class="imgborder" src="http://192.168.1.83/camera/door?user=watcher&amp;pwd=watcher" alt="" width="450" border="0" />
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
            <uxap:ObjectPageSection title="{i18n>cameras.tab.garage}">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection>
                        <uxap:blocks>
                            <html:img class="imgborder" src="http://192.168.1.83/camera/garage?action=stream" width="450" border="0" style="transform:rotate(180deg)"/>
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
            <uxap:ObjectPageSection title="{i18n>cameras.tab.garden}">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection>
                        <uxap:blocks>
                            <html:img class="imgborder"	src="http://192.168.1.83/camera/garden?user=watcher&amp;pwd=watcher" width="450" border="0" />
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>            
        </uxap:sections>
    </uxap:ObjectPageLayout>


</mvc:View>
