<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns:html="http://www.w3.org/1999/xhtml" controllerName="de.jumajumo.ha.view.HomeAutomationObjectLightningDetail"
	xmlns="sap.m" resourceBundleUrl="resources/de/jumajumo/ha/view/lightning.properties"
	resourceBundleAlias="ui">

	<Page showNavButton="{device>/isPhone}" title="{ui>page.title}"
		navButtonPress="goBack">

		<IconTabBar class="iconTabBarPaddingTop" expanded="{device>/isNoPhone}">
			<items>
				<IconTabFilter text="{ui>tab.door}" icon="sap-icon://lightbulb">
					<VBox alignItems="Center">

						<Button press="switchDoorLight" text="{ui>button.switchDoorLight}" />

						<html:br />
						<html:img width="99%"
							src="http://192.168.1.83/camera/door?user=watcher&amp;pwd=watcher">
						</html:img>
					</VBox>
				</IconTabFilter>
				<IconTabFilter text="{ui>tab.dining}" icon="sap-icon://lightbulb">
					<Text text="Helligkeit" />
					<Slider value="120" min="0" max="255" class="sapUiSmallMarginBottom"
						width="90%" change="diningSliderChange"/>
				</IconTabFilter>
				<IconTabFilter text="{ui>tab.bed}" icon="sap-icon://lightbulb">
				</IconTabFilter>
			</items>
		</IconTabBar>

	</Page>

</mvc:View>