<mvc:View controllerName="de.jumajumo.ha.view.HomeAutomationObjectList"
	xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns:html="http://www.w3.org/1999/xhtml"
	resourceBundleUrl="resources/de/jumajumo/ha/view/objectlist.properties"
	resourceBundleAlias="ui">

	<Page title="{ui>page.title}">
		<content>
			<List mode="{device>/listMode}">
				<items>
					<ObjectListItem title="{ui>item.garage}" type="{device>/listItemType}"
						icon="sap-icon://car-rental" iconDensityAware="true" press="navToGarage">
					</ObjectListItem>
					<ObjectListItem title="{ui>item.camera}" type="{device>/listItemType}"
						icon="sap-icon://video" iconDensityAware="true" press="navToCamera">
					</ObjectListItem>
					<ObjectListItem title="{ui>item.lightning}" type="{device>/listItemType}"
						icon="sap-icon://lightbulb" iconDensityAware="true" press="navToLightning">
					</ObjectListItem>
					<ObjectListItem title="{ui>item.configuration}" type="{device>/listItemType}"
						icon="sap-icon://settings" iconDensityAware="true" press="navToConfiguration">
					</ObjectListItem>
				</items>
			</List>
		</content>
	</Page>

</mvc:View>